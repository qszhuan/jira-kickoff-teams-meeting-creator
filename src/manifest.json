{
  "manifest_version": 3,
  "name": "JIRA Kickoff Meeting Creator",
  "description": "Popup the windows to create MS Teams meeting to kick off the ticket. The meeting title and content are prefilled",
  "version": "1.0",
  "permissions": ["contextMenus", "storage"],
  "host_permissions": ["*://*.atlassian.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/meeting.png",
    "48": "images/meeting-64.png",
    "64": "images/meeting-64.png",
    "128":  "images/meeting-128.png"
  },
  "options_page": "options.html"
}
